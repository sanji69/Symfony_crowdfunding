
{% block body %}

    <div class="container">

        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group row">
            {{ form_label(form.title, null, {
                'label_attr': {
                    'class': 'col-sm-2 col-form-label'
                }})
            }}
            <div class="col-sm-10">
                {{ form_widget(form.title, {
                    'attr': {
                        'class': 'form-conrol'
                    }})
                }}
            </div>
        </div>

    </div>

    <div class="form-group row">
        {{ form_label(form.goal, null, {
            'label_attr': {
                'class': 'col-sm-2 col-form-label'
            }})
        }}
        <div class="col-sm-10">
            {{ form_widget(form.goal, {
                'attr': {
                    'class': 'form-conrol'
                }})
            }}
        </div>
    </div>

    <div class="form-group row">
        {{ form_label(form.content, null, {
            'label_attr': {
                'class': 'col-sm-2 col-form-label'
            }})
        }}
        <div class="col-sm-10">
            {{ form_widget(form.content, {
                'attr': {
                    'class': 'form-conrol'
                }})
            }}
        </div>
    </div>

    <button type="submit" class="btn btn-success" name="button">Submit</button>

    {{ form_rest(form) }}
    {{ form_end(form) }}

    </div> 

    {% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('build/css/form.css') }}" type="text/css"/>
    
    {% endblock %}
    
	<div class="container-article100">
		<div class="wrap-article100">
			<form class="article100-form validate-form">
				<span class="article100-form-title">
					Lancer votre projet
				</span>

				<div class="wrap-input100 validate-input bg1" data-validate="Le titre de votre projet">
					<span class="label-input100">Titre </span>
					<input class="input100" type="text" name="name" placeholder="Titre du projet">
				</div>

	
	<div class="wrap-input100 validate-input bg1" data-validate="Please Type Your Name">
					<span class="label-input100"> Goal</span>
					<input class="input100" type="text" name="name" placeholder="">
				</div>

				<div class="wrap-input100 validate-input bg0 rs1-alert-validate" data-validate = "Taper votre message ici">
					<span class="label-input100">Message</span>
					<textarea class="input100" name="message" placeholder="Votre message"></textarea>
				</div>

				<div class="container-article100-form-btn">
					<button class="article100-form-btn">
						<span>
							Cr√©er votre projet
							<i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
						</span>
					</button>
				</div>
			</form>
		</div>
	</div>


{% endblock %}
